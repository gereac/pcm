<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.gcsf.pcm.intro.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="com.gcsf.pcm.intro.Perspective"
            id="com.gcsf.pcm.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.gcsf.pcm.application"
            name="RCP Product">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="RCP Product">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="com.gcsf.pcm.intro">
      </intro>
      <introProductBinding
            introId="com.gcsf.pcm.intro"
            productId="com.gcsf.pcm.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="com.gcsf.pcm.intro"
            content="introContent.xml"
            id="com.gcsf.pcm.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="com.gcsf.pcm.splashHandlers.InteractiveSplashHandler"
            id="com.gcsf.pcm.splashHandlers.interactive">
      </splashHandler>
      <splashHandlerProductBinding
            productId="com.gcsf.pcm.product"
            splashId="com.gcsf.pcm.splashHandlers.interactive">
      </splashHandlerProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <separator
                  name="com.gcsf.pcm.separator1">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
         <menu
               label="User">
            <command
                  commandId="org.eclipse.ui.file.restartWorkbench"
                  label="Add User"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.file.restartWorkbench"
                  label="Delete User"
                  style="push">
            </command>
         </menu>
         <menu
               label="Groups">
         </menu>
         <menu
               label="Help">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  style="push">
               <parameter
                     name="org.eclipse.ui.views.showView.viewId"
                     value="org.eclipse.ui.internal.introView">
               </parameter>
            </command>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>

</plugin>
