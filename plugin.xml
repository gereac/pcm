<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.gcsf.pcm.intro.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Contact Perspective"
            class="com.gcsf.pcm.gui.GeneralPerspective"
            id="com.gcsf.pcm.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.gcsf.pcm.application"
            name="Personal Contact Manager">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif,icons/alt_window_48.gif,icons/alt_window_64.gif,icons/alt_window_128.gif">
         </property>
         <property
               name="appName"
               value="Personal Contact Manager">
         </property>
         <property
               name="aboutImage"
               value="icons/Login Manager.gif">
         </property>
         <property
               name="aboutText"
               value="Build a user friendly eclipse RCP application that implements the follow features. &#x0A;&#x0A;Code Name : Personal Contact Manager &#x0A;&#x0A;I.        Login to the personal contact manager &#x0A;II.        Create new user group &#x0A;A.        Input Values &#x0A;1.        Group Name &#x0A;2.        Group Description &#x0A;3.        Members &#x0A;a)        Add/Delete users to a group &#x0A;b)        Create a new user dialog to add a new user (name, phone, email) &#x0A;III.        List Groups that are Owned by the current user &#x0A;·        Allow users to make changes to existing groups &#x0A;IV.        Bulk Update &#x0A;·        Allow user to search and add/remove search results to one or more groups. &#x0A;V.        Delete group &#x0A;·        Warn user before actually deleting the group &#x0A;VI.        Add one or move of the optional features below &#x0A;&#x0A;Optional Features &#x0A;I.        Allow user to drag and drop members between groups and/or any other place you find useful &#x0A;II.        Use table editors to allow user to edit group details from bullet 2 above &#x0A;III.        Be creative and implement any other useful feature.  Make sure you clearly identify the feature you added in the deliverables document &#x0A;&#x0A;&#x0A;Deliverables &#x0A;Submit a zip file containing the following items in a clearly labeled structure. &#x0A;I.        Eclipse Workspace which includes source code &#x0A;II.        Exported RCP Applications EXE &#x0A;Document listing any special instructions">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            icon="icons/Login Manager_small.gif"
            id="com.gcsf.pcm.intro"
            label="PCM Welcome">
      </intro>
      <introProductBinding
            introId="com.gcsf.pcm.intro"
            productId="com.gcsf.pcm.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="com.gcsf.pcm.intro"
            content="introContent.xml"
            id="com.gcsf.pcm.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="com.gcsf.pcm.splashHandlers.InteractiveSplashHandler"
            id="com.gcsf.pcm.splashHandlers.interactive">
      </splashHandler>
      <splashHandlerProductBinding
            productId="com.gcsf.pcm.product"
            splashId="com.gcsf.pcm.splashHandlers.interactive">
      </splashHandlerProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <separator
                  name="com.gcsf.pcm.separator1">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
         <menu
               label="Groups">
            <command
                  commandId="com.gcsf.pcm.commands.groups.addGroupCommand"
                  icon="icons/group/group_add.png"
                  label="Add Group"
                  style="push">
            </command>
            <command
                  commandId="com.gcsf.pcm.commands.groups.deleteGroupCommand"
                  icon="icons/group/group_delete.png"
                  label="Delete Group"
                  style="push">
            </command>
            <command
                  commandId="com.gcsf.pcm.commands.groups.editGroupCommand"
                  icon="icons/group/group_edit.png"
                  label="Edit Group"
                  style="push">
            </command>
         </menu>
         <menu
               label="Users">
            <command
                  commandId="com.gcsf.pcm.commands.users.addUserCommand"
                  icon="icons/user/user_add.png"
                  label="Add User"
                  style="push">
            </command>
            <command
                  commandId="com.gcsf.pcm.commands.users.deleteUserCommand"
                  icon="icons/user/user_delete.png"
                  label="Delete User"
                  style="push">
            </command>
            <command
                  commandId="com.gcsf.pcm.commands.users.editUserCommand"
                  icon="icons/user/user_edit.png"
                  label="Edit User"
                  style="push">
            </command>
         </menu>
         <menu
               label="Tools">
            <command
                  commandId="org.eclipse.ui.window.preferences"
                  label="Options"
                  style="push">
            </command>
         </menu>
         <menu
               label="Help">
            <command
                  commandId="com.gcsf.pcm.command.showIntro"
                  icon="icons/welcome/welcome16.gif"
                  label="Welcome_Command"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.quickStartAction"
                  icon="icons/welcome/welcome16.gif"
                  label="Welcome_Action"
                  style="push">
            </command>
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  icon="icons/information.png"
                  label="About"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="com.gcsf.pcm.toolbars.group">
            <command
                  commandId="com.gcsf.pcm.commands.groups.addGroupCommand"
                  icon="icons/group/group_add.png"
                  label="Add group"
                  style="push">
            </command>
            <command
                  commandId="com.gcsf.pcm.commands.groups.deleteGroupCommand"
                  icon="icons/group/group_delete.png"
                  label="Delete group"
                  style="push">
            </command>
            <command
                  commandId="com.gcsf.pcm.commands.groups.editGroupCommand"
                  icon="icons/group/group_edit.png"
                  label="Edit group"
                  style="push">
            </command>
         </toolbar>
         <toolbar
               id="com.gcsf.pcm.toolbars.user">
            <command
                  commandId="com.gcsf.pcm.commands.users.addUserCommand"
                  icon="icons/user/user_add.png"
                  label="Add User"
                  style="push">
            </command>
            <command
                  commandId="com.gcsf.pcm.commands.users.deleteUserCommand"
                  icon="icons/user/user_delete.png"
                  label="Delete User"
                  style="push">
            </command>
            <command
                  commandId="com.gcsf.pcm.commands.users.editUserCommand"
                  icon="icons/user/user_edit.png"
                  label="Edit User"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:com.gcsf.pcm.view.groups">
         <command
               commandId="org.eclipse.ui.navigate.collapseAll"
               icon="icons/collapseall.gif"
               style="push"
               tooltip="Collapse All">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.trim.status">
         <toolbar
               id="com.gcsf.pcm.contributedTrim">
            <control
                  class="com.gcsf.pcm.gui.ExampleControlContribution"
                  id="contributions.controlContrib1">
            </control>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.gcsf.pcm.handlers.user.AddUserHandler"
            commandId="com.gcsf.pcm.commands.users.addUserCommand">
      </handler>
      <handler
            class="com.gcsf.pcm.handlers.user.DeleteUserHandler"
            commandId="com.gcsf.pcm.commands.users.deleteUserCommand">
         <activeWhen>
            <reference
                  definitionId="oneUserSelectedInUserView">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="com.gcsf.pcm.handlers.user.EditUserHandler"
            commandId="com.gcsf.pcm.commands.users.editUserCommand">
         <activeWhen>
            <reference
                  definitionId="oneUserSelectedInUserView">
            </reference></activeWhen>
      </handler>
      <handler
            class="com.gcsf.pcm.handlers.group.AddGroupHandler"
            commandId="com.gcsf.pcm.commands.groups.addGroupCommand">
      </handler>
      <handler
            class="com.gcsf.pcm.handlers.group.DeleteGroupHandler"
            commandId="com.gcsf.pcm.commands.groups.deleteGroupCommand">
         <activeWhen>
            <reference
                  definitionId="oneGroupSelectedInGroupView">
            </reference></activeWhen>
      </handler>
      <handler
            class="com.gcsf.pcm.handlers.group.EditGroupHandler"
            commandId="com.gcsf.pcm.commands.groups.editGroupCommand">
         <activeWhen>
            <reference
                  definitionId="oneGroupSelectedInGroupView">
            </reference>
         </activeWhen>
      </handler>
      <handler
            class="com.gcsf.pcm.handlers.IntroHandler"
            commandId="com.gcsf.pcm.command.showIntro">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.gcsf.pcm.commands.users.addUserCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+6">
      </key>
      <key
            commandId="com.gcsf.pcm.commands.users.deleteUserCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+7">
      </key>
      <key
            commandId="com.gcsf.pcm.commands.users.editUserCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+8">
      </key>
      <key
            commandId="com.gcsf.pcm.commands.groups.addGroupCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+2">
      </key>
      <key
            commandId="com.gcsf.pcm.commands.groups.deleteGroupCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+3">
      </key>
      <key
            commandId="com.gcsf.pcm.commands.groups.editGroupCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+4">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="Commands for handling user related actions"
            id="com.gcsf.pcm.commands.category.user"
            name="User Comands Category">
      </category>
      <command
            categoryId="com.gcsf.pcm.commands.category.user"
            id="com.gcsf.pcm.commands.users.addUserCommand"
            name="Add User Command">
      </command>
      <command
            categoryId="com.gcsf.pcm.commands.category.user"
            id="com.gcsf.pcm.commands.users.deleteUserCommand"
            name="Delete User Command">
      </command>
      <command
            categoryId="com.gcsf.pcm.commands.category.user"
            id="com.gcsf.pcm.commands.users.editUserCommand"
            name="Edit User Command">
      </command>
      <category
            description="Commands for handling group related actions"
            id="com.gcsf.pcm.commands.category.group"
            name="Group Comands Category">
      </category>
      <command
            categoryId="com.gcsf.pcm.commands.category.group"
            id="com.gcsf.pcm.commands.groups.addGroupCommand"
            name="Add Group Command">
      </command>
      <command
            categoryId="com.gcsf.pcm.commands.category.group"
            id="com.gcsf.pcm.commands.groups.deleteGroupCommand"
            name="Delete Group Command">
      </command>
      <command
            categoryId="com.gcsf.pcm.commands.category.group"
            id="com.gcsf.pcm.commands.groups.editGroupCommand"
            name="Edit Group Command">
      </command>
      <command
            id="com.gcsf.pcm.command.showIntro"
            name="Welcome Command">
      </command>
      <command
            defaultHandler="org.eclipse.ui.internal.handlers.QuitHandler"
            id="com.gcsf.pcm.tray.exitCommand"
            name="Exit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="com.gcsf.pcm.gui.views.ContactsView"
            icon="icons/users.png"
            id="com.gcsf.pcm.view.groups"
            name="Contacts View"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="com.gcsf.pcm.gui.views.UsersView"
            icon="icons/user.png"
            id="com.gcsf.pcm.view.users"
            name="Users View"
            restorable="true">
      </view>
      <view
            class="com.gcsf.pcm.gui.views.CustomPropertiesView"
            icon="icons/application_view_detail.png"
            id="com.gcsf.pcm.view.CustomPropertiesView"
            name="Properties View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="com.gcsf.pcm.perspective">
         <view
               closeable="false"
               id="com.gcsf.pcm.view.groups"
               minimized="false"
               ratio="0.8f"
               relationship="top"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="com.gcsf.pcm.view.users"
               minimized="false"
               ratio="0.35f"
               relationship="right"
               relative="com.gcsf.pcm.view.groups"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
         <view
               closeable="false"
               id="org.eclipse.ui.console.ConsoleView"
               minimized="false"
               moveable="false"
               ratio="0.15f"
               relationship="bottom"
               relative="org.eclipse.ui.editorss"
               showTitle="false"
               visible="true">
         </view>
         <view
               closeable="false"
               id="com.gcsf.pcm.view.CustomPropertiesView"
               minimized="false"
               ratio="0.49f"
               relationship="left"
               relative="org.eclipse.ui.console.ConsoleView"
               showTitle="true"
               standalone="true"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="oneGroupSelectedInGroupView">
         <with
               variable="selection">
            <and>
               <count
                     value="+">
               </count>
               <iterate
                     operator="or">
                  <instanceof
                        value="com.gcsf.pcm.model.UserGroup">
                  </instanceof>
               </iterate>
               <with
                     variable="activePartId">
                  <equals
                        value="com.gcsf.pcm.view.groups">
                  </equals>
               </with>
            </and>
         </with>
      </definition>
      <definition
            id="oneUserSelectedInUserView">
         <with
               variable="selection">
            <and>
               <count
                     value="+">
               </count>
               <iterate
                     operator="or">
                  <instanceof
                        value="com.gcsf.pcm.model.User">
                  </instanceof>
               </iterate>
               <with
                     variable="activePartId">
                  <equals
                        value="com.gcsf.pcm.view.users">
                  </equals>
               </with></and>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.propertiesView">
      <excludeSources
            id="org.eclipse.ui.console.ConsoleView">
      </excludeSources>
   </extension>
   <extension
         id="userDrop"
         name="User Resource Drop"
         point="org.eclipse.ui.dropActions">
      <action
            class="com.gcsf.pcm.model.treeviewer.dnd.UserPluginDropAdapter"
            id="com.gcsf.pcm.dnd.gadgetDrop">
      </action>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.gcsf.pcm.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="com.gcsf.pcm.preferences.GeneralPreferencePage"
            id="com.gcsf.pcm.preferences.GeneralPreferencePage"
            name="General">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="com.gcsf.pcm.model.UserGroup"
            class="com.gcsf.pcm.adapter.InternalModelAdapterFactory">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.core.runtime.adapters">
      <factory
            adaptableType="com.gcsf.pcm.model.User"
            class="com.gcsf.pcm.adapter.InternalModelAdapterFactory">
         <adapter
               type="org.eclipse.ui.views.properties.IPropertySource">
         </adapter>
      </factory>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyContributor">
      <propertyContributor
            contributorId="com.gcsf.pcm.view.groups"
            labelProvider="com.gcsf.pcm.propertiesview.PropertiesViewTitleBarLabelProvider">
         <propertyCategory
               category="usergroup"></propertyCategory>
      </propertyContributor>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertyTabs">
      <propertyTabs
            contributorId="com.gcsf.pcm.view.groups">
         <propertyTab
               category="usergroup"
               id="com.gcsf.pcm.userGroup.basicTab"
               image="icons/simple.png"
               label="Basic">
         </propertyTab>
         <propertyTab
               afterTab="com.gcsf.pcm.userGroup.basicTab"
               category="usergroup"
               id="com.gcsf.pcm.userGroup.advancedTab"
               image="icons/advanced.png"
               indented="true"
               label="Advanced">
         </propertyTab>
         <propertyTab
               afterTab="com.gcsf.pcm.userGroup.advancedTab"
               category="usergroup"
               id="com.gcsf.pcm.userGroup.originalTab"
               image="icons/prop_ps.gif"
               label="Original">
         </propertyTab>
      </propertyTabs>
   </extension>
   <extension
         point="org.eclipse.ui.views.properties.tabbed.propertySections">
      <propertySections
            contributorId="com.gcsf.pcm.view.groups">
         <propertySection
               class="com.gcsf.pcm.propertiesview.NamePropertySection"
               id="com.gcsf.pcm.userGroup.nameProperty"
               tab="com.gcsf.pcm.userGroup.basicTab">
            <input
                  type="com.gcsf.pcm.model.UserGroup">
            </input>
         </propertySection>
         <propertySection
               afterSection="com.gcsf.pcm.userGroup.nameProperty"
               class="com.gcsf.pcm.propertiesview.DescriptionPropertySection"
               id="com.gcsf.pcm.userGroup.descriptionProperty"
               tab="com.gcsf.pcm.userGroup.basicTab">
            <input
                  type="com.gcsf.pcm.model.UserGroup">
            </input>
         </propertySection>
         <propertySection
               class="com.gcsf.pcm.propertiesview.MembersPropertySection"
               id="com.gcsf.pcm.userGroup.membersProperty"
               tab="com.gcsf.pcm.userGroup.advancedTab">
            <input
                  type="com.gcsf.pcm.model.UserGroup">
            </input>
         </propertySection>
         <propertySection
               class="org.eclipse.ui.views.properties.tabbed.AdvancedPropertySection"
               id="com.gcsf.pcm.userGroup.original"
               tab="com.gcsf.pcm.userGroup.originalTab">
            <input
                  type="com.gcsf.pcm.model.UserGroup">
            </input>
         </propertySection>
      </propertySections>
   </extension>

</plugin>
